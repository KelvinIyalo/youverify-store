<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".presentation.main_app.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        android:padding="16dp"
        android:transitionName="search_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_widget"
            app:cardCornerRadius="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/profile_dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/grey"
            android:text="Premium Subscriber"
            android:textColor="@color/grey"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawableRight="@drawable/expand_more_24"
            android:drawableTint="@color/white"
            android:fontFamily="@font/mailsansroman_demibold"
            android:text="Wertheimer, Illinois"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/user_location" />


        <TextView
            android:id="@+id/view_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_widget"
            android:drawableTop="@drawable/shopping_cart_icon"
            android:drawableTint="@color/black"
            android:paddingTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cart_label"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circular_widget"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/mailsansroman_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/view_cart"
            app:layout_constraintTop_toTopOf="@+id/view_cart" />

        <TextView
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_two_gradient"
            android:backgroundTint="@color/white"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:inputType="none"
            android:maxLines="1"
            android:padding="6dp"
            android:paddingStart="16dp"
            android:text="@string/search_product"
            android:textSize="@dimen/text_normal_14sp"
            android:transitionName="search_tv"
            app:drawableEndCompat="@drawable/scan"
            app:drawableStartCompat="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="@id/view_cart"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintTop_toBottomOf="@id/user_address" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_list_rv"
        android:layout_width="match_parent"
        android:transitionName="rv_home"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimension_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_section"
        tools:itemCount="6"
        tools:listitem="@layout/item_layout_product" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/viewed_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="product_list_rv" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:indeterminateTint="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait..."
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar"
        app:layout_constraintTop_toTopOf="@id/progressBar" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="progressBar,loading_message" />

</androidx.constraintlayout.widget.ConstraintLayout>