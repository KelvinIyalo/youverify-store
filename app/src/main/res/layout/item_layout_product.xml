<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp8"
    android:layout_marginTop="@dimen/dp3"
    android:layout_marginEnd="@dimen/dp4"
    android:layout_marginBottom="@dimen/dp3"
    android:background="@drawable/background_coner"
    android:backgroundTint="@color/white">

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="30dp"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/thumbnail_ic" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_two_gradient"
        android:backgroundTint="@color/yellow"
        android:padding="@dimen/dp5"
        android:text="In Stock"
        android:textColor="@color/white"
        android:textSize="@dimen/sp8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/product_img" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        android:padding="@dimen/dp6"
        app:layout_constraintBottom_toBottomOf="@id/product_img"
        app:layout_constraintEnd_toEndOf="@id/product_img"
        app:layout_constraintStart_toStartOf="@id/product_img">

        <TextView
            android:id="@+id/product_tittle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/mailsansroman_demibold"
            android:gravity="center"
            android:maxLines="1"
            android:text="Red Nail Polish"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mailsansroman_demibold"
            android:gravity="center"
            android:text="N20,000"
            android:textColor="@color/white"
            android:textSize="@dimen/text_normal_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_tittle" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
