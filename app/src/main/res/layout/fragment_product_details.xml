<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:transitionName="search_detail"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/profile_dp" />

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/dimension_16dp"
            android:layout_marginTop="@dimen/dimension_16dp"
            android:background="@drawable/circular_widget"
            android:backgroundTint="#36101010"
            android:drawableTop="@drawable/cancel_24"
            android:fontFamily="@font/mailsansroman_bold"
            android:paddingTop="9dp"
            app:layout_constraintStart_toStartOf="@id/product_img"
            app:layout_constraintTop_toTopOf="@id/product_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/product_amount_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimension_16dp"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp8">

            <TextView
                android:id="@+id/product_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_16dp"
                android:fontFamily="@font/mailsansroman_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18" />

            <TextView
                android:id="@+id/product_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_16dp"
                android:fontFamily="@font/mailsansroman_bold"
                android:text="2024"
                android:textColor="@color/black"
                android:textSize="@dimen/sp18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_tittle" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/product_description_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimension_16dp"
        app:layout_constraintTop_toBottomOf="@id/product_amount_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp8">

            <TextView
                android:id="@+id/product_description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_16dp"
                android:layout_marginEnd="@dimen/dimension_16dp"
                android:fontFamily="@font/mailsansroman_bold"
                android:text="Description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_amount_card" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_16dp"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dimension_16dp"
                android:fontFamily="@font/mailsansroman_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_amount_card"
                tools:text=" anim id est laborum." />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/yellow"
                android:rating="3"
                android:scaleX="0.7"
                android:scaleY="0.8" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimension_16dp"
        app:layout_constraintTop_toBottomOf="@+id/product_description_card">

        <TextView
            android:id="@+id/negative_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_widget"
            android:backgroundTint="@color/grey"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/purple_700"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimension_16dp"
            android:text="1"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/positive_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circular_widget"
            android:backgroundTint="@color/purple_200"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimension_16dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_cart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_16dp"
                android:background="@drawable/background_coner"
                android:backgroundTint="@color/yellow"
                android:drawableTop="@drawable/shopping_cart_icon"
                android:drawableTint="@color/white"
                android:paddingTop="12dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cart_label"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/circular_widget"
                android:backgroundTint="@color/red"
                android:fontFamily="@font/mailsansroman_bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible"
                android:layout_marginTop="-8dp"
                android:layout_marginEnd="-8dp"
                app:layout_constraintEnd_toEndOf="@+id/view_cart"
                app:layout_constraintTop_toTopOf="@+id/view_cart" />

            <TextView
                android:id="@+id/add_to_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimension_16dp"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginEnd="@dimen/dimension_16dp"
                android:layout_marginBottom="@dimen/dp8"
                android:background="@drawable/background_coner"
                android:backgroundTint="@color/yellow"
                android:drawableStart="@drawable/add_to_cart_icon"
                android:drawableTint="@color/white"
                android:gravity="center"
                android:padding="@dimen/dimension_16dp"
                android:text="ADD TO CART"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_cart"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>